<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.controlsfx.control.CheckComboBox?>

<HBox prefHeight="100.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bo.roman.radio.ui.controller.StationEditorController">
   <children>
      <GridPane prefHeight="100.0" prefWidth="270.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction" prefHeight="27.0" prefWidth="100.0" text="Save" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="200.0" right="10.0" />
               </GridPane.margin>
            </Button>
            <CheckComboBox fx:id="comboBox" prefHeight="27.0" prefWidth="122.0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </CheckComboBox>
            
            <!-- <ComboBox fx:id="comboBox" prefHeight="27.0" prefWidth="122.0" promptText="Categories" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </ComboBox> -->
         </children>
      </GridPane>
   </children>
</HBox>
